<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        	<shape android:shape="rectangle">
    			<stroke android:width="2dp"
        			android:color="#80FFFFFF" />

  			<corners android:radius="5dp" />

  			<gradient android:angle="90"
            	android:centerColor="#E8BA00"
            	android:endColor="#FFFF00"
            	android:startColor="#D6AC00" />
  	
  			<padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
  	
  	 	</shape>
  	 
     </item>
  	
  	<item android:state_pressed="true">
        
  	    <shape android:shape="rectangle">
       		 <stroke android:width="4dp"
        		android:color="#5F4C0B" />

  			<corners android:radius="5dp" />

  			<gradient android:angle="90"
            android:centerColor="#886A08"
            android:endColor="#FFFF00"
            android:startColor="#5F4C0B" />
  			
  			<padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
   	
   		</shape>
  			
    </item>
  	
</selector>
